<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tutor_hire_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.1); /* More transparent for clarity */
            backdrop-filter: blur(10px); /* Blurs the background behind the card */
            -webkit-backdrop-filter: blur(10px); /* Safari support */
            border: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border for gloss */
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.3); /* Added inset shadow for shine */
            max-width: 100%;
            width: 50%;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 25px;
                font-weight: 700;
                color: #ffffff;
            }

        .btn-primary {
            width: 100%;
        }

        footer {
            position: absolute;
            bottom: 10px;
            color: white;
            font-size: 0.9rem;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-card">
        @RenderBody()
    </div>

    <footer>
        &copy; 2025 - Tutor_hire_system
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
