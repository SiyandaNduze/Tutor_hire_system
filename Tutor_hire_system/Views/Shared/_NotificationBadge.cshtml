@inject Tutor_hire_system.Data.Tutor_hire_systemContext _context
@{
    var userId = Context.Session.GetInt32("UserId");
    var unread = 0;

    if (userId != null)
    {
        unread = _context.Notification
            .Where(n => n.UserId == userId && !n.IsRead)
            .Count();
    }
}

<a asp-controller="Notification" asp-action="Index" class="nav-link position-relative">
    <i class="bi bi-bell fs-4"></i>

    @if (unread > 0)
    {
        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
            @unread
        </span>
    }
</a>
