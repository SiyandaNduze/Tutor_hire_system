@model IEnumerable<Tutor_hire_system.Models.Job>

@{
    Layout = "_TutorLayout";
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2>My Jobs</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Content</th>
                <th>Status</th>
                <th>Date</th>
                <th>Student</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Post.Content</td>
                    <td>@item.Status</td>
                    <td>@item.DateAccepted</td>
                    <td>@item.Post.Student.StudentNumber</td>
                    <td>
                        @if (item.Status == "Accepted")
                        {
                            <a class="btn btn-success" asp-action="Complete" asp-route-id="@item.JobId">Complete</a>
                            <a class="btn btn-warning" asp-action="Drop" asp-route-id="@item.JobId">Drop</a>
                        }
                    </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
